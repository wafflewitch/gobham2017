<div class="home-signup" id="signup-wrapper" hidden>
	<h1 class="welcome">Welcome Aboard!</h1>
	<p class="signuptext"> Already a member?  <a href="#" id = "toggle-login">Log In</a></p>

	<div class="row">


    <div class="col-lg-4"></div>
      <div class="col-lg-4">


          <%= form_for(User.new, url: registration_path("user"), method: :post, defaults: { html: { class: 'form-control' } } ) do |f| %>
            <%= f.label :email %><br>
            <%= f.email_field :email, required: true, autofocus: true, html: { id: 'email' } %><br><br>
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name, required: true, html: { id: 'first-name' } %><br><br>
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name, required: true, html: { id: 'last-name' } %><br><br>
            <%= f.label :password %><br>
            <%= f.password_field :password, required: true, html: { id: 'password' } %><br><br>
            <%= f.submit "Get started with goBham!", html: { class: "btn btn-default" } %>
        <% end %>

      </div>

	<div class="col-lg-4"></div>
</div>
