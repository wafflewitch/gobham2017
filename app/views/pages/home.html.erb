    <div class="col-lg-4"></div>
      <div class="col-lg-4">

          <%= form_tag(user_session_path, method: :post, defaults: { html: { class: 'form-control' } } ) do %>
            <%= label_tag :email %><br>
            <%= text_field_tag "user[email]", "", required: true, autofocus: true, html: { id: 'email' } %><br><br>
            <%= label_tag :password %><br>
            <%= password_field_tag "user[password]", "", required: true, html: { id: 'password' } %><br><br>
